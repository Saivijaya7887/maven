  redis:

    image: redis:alpine 
  web: 

    image: nginx:latest 

    ports: 

      - "8085:80" 
    depends_on: 

      - redis 

 

  db: 

    image: postgres:15 

    environment: 

      POSTGRES_USER: demo 

      POSTGRES_PASSWORD: demo 

      POSTGRES_DB: demo_db 
   
